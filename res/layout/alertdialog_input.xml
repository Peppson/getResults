<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/textViewDialog_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewDialog_rep"
        android:text="Weight"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewDialog_rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="70dp"
  		android:layout_centerHorizontal="true"
        android:text="Rep"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewDialog_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textViewDialog_rep"
        android:text="Set"
        android:textAppearance="?android:attr/textAppearanceMedium" />

     <NumberPicker
         android:id="@+id/numberPicker_Set"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="5dp" 
         android:layout_marginTop="25dp"/>
     
     <NumberPicker
         android:id="@+id/numberPicker_Rep"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="36dp" 
         android:layout_marginTop="25dp"
         android:layout_toRightOf="@+id/numberPicker_Set"
         />

     <NumberPicker
         android:id="@+id/numberPicker_weight"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="36dp" 
         android:layout_marginTop="25dp"
         android:layout_toRightOf="@+id/numberPicker_Rep"/>

     

</RelativeLayout>
